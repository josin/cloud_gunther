<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag %w{typography forms prodplanner} %>
  <%= javascript_include_tag %w{jquery-1.5} %>
  <%= javascript_include_tag %w{application rails} %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="main">
		<% if user_signed_in? %>
		  <div id="user_login_box">
		    <%= link_to current_user.name, edit_user_registration_path %> |
		    <%= link_to 'Sign out', destroy_user_session_path %>
		  </div><!-- #user_login_box -->
		<% end %>
		<div class="clear"></div>
		
		<div id="menu">
			<%= render_navigation %>
		</div><!-- #menu -->
		<div class="clear"></div>
		
		<div id="notifications">
			<% flash.each do |name, msg| %>
	      <%= content_tag :div, msg, :class => "#{name}" if msg.is_a?(String) %>
	    <% end %>
		</div><!-- #notifications -->
		
		<div id="content">
			<%= yield %>	
		</div><!-- #content -->
		<div class="clear"></div>

		<div id="footer">
			&copy; Josef Sin 2011
		</div><!-- #footer -->
	</div><!-- #container -->
</body>
</html>
