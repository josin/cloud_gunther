<table>
	<thead>
		<tr>
			<th><%= sort_link search, :id, "#" %></th>
			<th><%= sort_link search, :name %></th>
			<th><%= sort_link search, :priority %></th>
			<th>Actions</th>
		</tr>
	</thead>
	
	<tbody>
		<% user_groups.each do |user_group| %>
		  <tr>
				<td><%= user_group.id %></td>
				<td><%= user_group.name %></td>
				<td><%= user_group.priority %></td>
		    <td>
					<%= link_to 'Show', user_group %>
			    <%= link_to 'Edit', edit_user_group_path(user_group) %>
			    <%= link_to 'Destroy', user_group, :confirm => 'Are you sure?', :method => :delete %>
				</td>
		  </tr>
		<% end %>
	</tbody>
</table>

<%= pagination(user_groups) %>

